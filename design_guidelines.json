  "instructions_to_main_agent": {
    "general": "Follow the 'Industrial Elegance' theme. Use the defined 'industrial-shadow' class for all cards and buttons. Keep the layout airy but structured.",
    "layout_rules": [
      "Use 'container' class for all section wrappers.",
      "Ensure all text has high contrast (Slate 900 on Slate 50).",
      "Do not use rounded corners larger than 'rounded-sm'. Keep it sharp.",
      "Use the 'Barlow Condensed' font for all headings to give that tall, architectural feel."
    ],
    "component_specifics": {
      "navbar": "Sticky, white background with bottom border. Logo left, Links right (uppercase, tracking-widest).",
      "footer": "Dark theme (Slate 900 bg, White text). Large typography."
    }
  },
  "universal_guidelines": {
    "do_not": [
      "Do not use gradients.",
      "Do not use rounded-xl or rounded-2xl.",
      "Do not use generic stock photos of shaking hands."
    ],
    "must_do": [
      "Use the provided image URLs.",
      "Implement smooth scroll.",
      "Use 'data-testid' for all interactive elements."
    ]
  }
