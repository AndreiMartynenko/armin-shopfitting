{
  "design_system": {
    "typography": {
      "font_family": {
        "heading": "Barlow Condensed, sans-serif",
        "body": "Manrope, sans-serif"
      },
      "scale": {
        "h1": "text-6xl md:text-7xl font-bold tracking-tighter uppercase leading-none",
        "h2": "text-4xl md:text-5xl font-bold tracking-tight uppercase",
        "h3": "text-2xl md:text-3xl font-semibold tracking-normal",
        "body_large": "text-lg md:text-xl font-medium leading-relaxed",
        "body_default": "text-base text-slate-600 leading-relaxed",
        "caption": "text-sm font-bold tracking-widest uppercase text-slate-500"
      }
    },
    "colors": {
      "palette": {
        "primary": "#0F172A",
        "secondary": "#F97316",
        "accent": "#3B82F6",
        "background": "#F8FAFC",
        "surface": "#FFFFFF",
        "border": "#E2E8F0",
        "muted": "#64748B"
      },
      "usage": {
        "text_main": "text-slate-900",
        "text_muted": "text-slate-600",
        "bg_main": "bg-slate-50",
        "bg_surface": "bg-white",
        "border_default": "border-slate-200",
        "primary_cta": "bg-slate-900 text-white hover:bg-slate-800",
        "secondary_cta": "bg-orange-500 text-white hover:bg-orange-600"
      }
    },
    "visual_enhancers": {
      "shadows": {
        "industrial": "shadow-[4px_4px_0px_0px_rgba(15,23,42,1)]",
        "industrial_hover": "hover:shadow-[6px_6px_0px_0px_rgba(15,23,42,1)] hover:-translate-y-0.5 transition-all duration-200"
      },
      "borders": {
        "default": "border border-slate-200",
        "thick": "border-2 border-slate-900"
      },
      "radius": {
        "default": "rounded-none",
        "subtle": "rounded-sm"
      }
    },
    "layout": {
      "container": "max-w-7xl mx-auto px-6 md:px-12",
      "section_spacing": "py-20 md:py-32",
      "grid_gap": "gap-8 md:gap-12"
    }
  },
  "components": {
    "hero": {
      "type": "split_layout",
      "content": {
        "alignment": "left",
        "elements": [
          "Badge: 'EST. 2024'",
          "H1: 'PRECISION SHOPFITTING & CONSTRUCTION'",
          "Body: 'Transforming commercial spaces with architectural precision and industrial strength.'",
          "CTA Group: [Primary Button 'View Projects', Secondary Button 'Contact Us']"
        ]
      },
      "visuals": {
        "image_style": "Rectangular with thick border and industrial shadow",
        "background": "Subtle grid pattern opacity-5"
      }
    },
    "services": {
      "type": "grid_3_column",
      "card_style": "bg-white border-2 border-slate-900 p-8 industrial-shadow hover:industrial-shadow-hover",
      "icons": "Lucide React (Ruler, Hammer, HardHat)"
    },
    "portfolio": {
      "type": "bento_grid",
      "layout": "Grid with 1 large feature (Girkin) and 2 smaller side items (BBC, ASDA)",
      "item_style": "group relative overflow-hidden border-2 border-slate-900 h-[400px]"
    },
    "contact": {
      "type": "split_with_form",
      "form_style": "bg-white p-8 border-2 border-slate-900 industrial-shadow",
      "input_style": "bg-slate-50 border-b-2 border-slate-200 focus:border-slate-900 rounded-none px-4 py-3"
    }
  },
